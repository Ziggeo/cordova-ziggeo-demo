<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ziggeo.cordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ziggeo Demo</name>
    <description>Ziggeo Demo</description>
    <author email="support@ziggeo.com" href="https://ziggeo.com">Ziggeo</author>
    <content src="index.html" />
    <allow-intent href="*" />
    <access origin="*" />
    <allow-navigation href="*" />
    <engine name="android" spec="^6.4.0" />
    <engine name="ios" spec="^4.5.5" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-camera" spec="^4.0.2">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="Camera" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Need to &#xA; access photolibrary" />
    </plugin>
    <plugin name="cordova-plugin-media-capture" spec="^2.0.0" />
    <plugin name="cordova-plugin-android-permissions" spec="^1.0.0" />
    <plugin name="cordova-plugin-file" spec="^5.0.0" />
</widget>
